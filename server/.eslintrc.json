{
  "env": {
    "browser": false,
    "es2021": true
  },
  "extends": "standard-with-typescript",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "@typescript-eslint/semi": "off"
  },
  "overrides": [
    {
      "files": [
        "src/*.js"
      ],
      "rules": {
        "@typescript-eslint/strict-blooean-expressions": "off",
        "@typescript-eslint/explicit-function-return-type": "off"
      }
    }
  ]
}
